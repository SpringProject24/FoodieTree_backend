<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.nmfw.foodietree.domain.auth.mapper.EmailMapper">

<!--    usertype에 따라서 email 칼럼의 expiredate 업데이트-->
    <update id="update">
        UPDATE tbl_verification_code
        SET expiry_date = #{expiryDate}
        WHERE
        <choose>
            <when test="userType == 'customer'">
                customer_id = #{customerId}
            </when>
            <when test="userType == 'store'">
                store_id = #{storeId}
            </when>
        </choose>
    </update>


    <insert id="save">
        INSERT INTO
        tbl_verification_code
        (
        customer_id,
        store_id,
        code,
        expiry_date,
        email_verified,
        user_type
        )
        VALUES
        (
        <choose>
            <when test="userType == 'customer'">
                #{customerId}
            </when>
            <when test="userType == 'store'">
                NULL
            </when>
            <otherwise>
                NULL
            </otherwise>
        </choose>,
        <choose>
            <when test="userType == 'store'">
                #{storeId}
            </when>
            <otherwise>
                NULL
            </otherwise>
        </choose>,
        NULL,
        #{expiryDate},
        #{emailVerified},
        #{userType}
        )
    </insert>

    <select id="findByEmail" resultType="EmailCodeDto">
        SELECT
        customer_id,
        store_id,
        code,
        expiry_date,
        user_type
        FROM
        tbl_verification_code
        WHERE
        <choose>
            <when test="userType == 'customer'">
                customer_id = #{email}
            </when>
            <when test="userType == 'store'">
               store_id = #{email}
            </when>
        </choose>
        AND
        expiry_date > NOW()
        ORDER BY
        expiry_date DESC
        LIMIT 1
    </select>

    <insert id="saveStore">
        INSERT INTO
            tbl_verification_code
                (
                    store_id,
                    code,
                    expiry_date
                )
        VALUES
                (
                    #{storeId},
                    #{code},
                    #{expiryDate}
                )
    </insert>
</mapper>