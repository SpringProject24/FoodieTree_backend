<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.nmfw.foodietree.domain.auth.mapper.EmailMapper">

<!--    usertype에 따라서 email 칼럼의 expiredate 업데이트-->
    <insert id="save">
        INSERT INTO
        tbl_verification_code
        (
        email,
        code,
        expiry_date,
        email_verified,
        user_type
        )
        VALUES
        (
        #{email},
        NULL,
        #{expiryDate},
        #{emailVerified},
        #{userType}
        )
    </insert>

    <update id="update">
        UPDATE tbl_verification_code
        SET expiry_date = #{expiryDate},
        email_verified = #{emailVerified}
        WHERE email = #{email}
    </update>

    <select id="findOneByEmail" resultType="EmailCodeDto">
        SELECT (*)
        FROM
        tbl_verification_code
        WHERE
        email = #{email}
    </select>

    <select id="existsByEmail" resultType="boolean">
        SELECT (*)
        FROM tbl_verification_code
        WHERE email = #{email}
    </select>



</mapper>