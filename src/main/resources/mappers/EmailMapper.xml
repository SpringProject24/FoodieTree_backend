<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.nmfw.foodietree.domain.auth.mapper.EmailMapper">

    <insert id="save">
        INSERT INTO
        tbl_verification_code
        (
        customer_id,
        store_id,
        code,
        expiry_date,
        email_verified
        )
        VALUES
        (
        <choose>
            <when test="userType == 'customer'">
                #{customerId}
            </when>
            <when test="userType == 'store'">
                NULL
            </when>
            <otherwise>
                NULL
            </otherwise>
        </choose>,
        <choose>
            <when test="userType == 'store'">
                #{storeId}
            </when>
            <otherwise>
                NULL
            </otherwise>
        </choose>,
        NULL,
        #{expiryDate},
        #{emailVerified}
        )
    </insert>
<!--      현재시간으로부터 유효한 코드 가져옴-->
    <select id="findByEmail" resultType="EmailCodeDto">
        SELECT
            customer_id,
            code,
            expiry_date
        FROM
            tbl_verification_code
        WHERE
            customer_id = #{customerId}
        AND
            expiry_date > NOW()
        ORDER BY
        expiry_date DESC
        LIMIT 1
    </select>

    <insert id="saveStore">
        INSERT INTO
            tbl_verification_code
                (
                    store_id,
                    code,
                    expiry_date
                )
        VALUES
                (
                    #{storeId},
                    #{code},
                    #{expiryDate}
                )
    </insert>
</mapper>